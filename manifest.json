{
  "manifest_version": 2,
  "name": "ExSLT",
  "version": "1.0.0",
  "description": "Google Chrome extension to view the necessary details in SLT usage meter.",
  "browser_action": {
    "default_title": "ExSLT"
  },
  "content_scripts": [
    {
      "matches": ["https://internetvas.slt.lk/dashboard"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab"]
}
